        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Label x:Name="Blomstersorter" Content="Blomstersorter:" HorizontalAlignment="Left" Margin="35,17,0,0" VerticalAlignment="Top"/>
            <TextBlock x:Name="TextBlock1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Ingen blomstersorter tilføjet" VerticalAlignment="Center" Height="139" Width="257" Background="LightGray"/>
            <Button x:Name="OpretBlomstersort" Content="Opret blomstersort" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.114,0.293" Width="auto" Click="OpretBlomstersort_Click"/>
